# ------------------------------------------------------------------------------
# PATH
# ------------------------------------------------------------------------------


typeset -U path

path=(
    "/usr/local/bin"
    "/usr/local/sbin"
    "/usr/bin"
    "/usr/sbin"
    "/bin"
    "/sbin"
    $path
)

# brew
if [[ ! -z "${BREW_HOME+x}" ]]; then
    eval $("/opt/homebrew/bin/brew" shellenv)
fi

export PATH


# ------------------------------------------------------------------------------
# brew
# ------------------------------------------------------------------------------


if [[ ! -z "${BREW_HOME+x}" ]]; then
    export HOMEBREW_NO_AUTO_UPDATE="1"
fi


# ------------------------------------------------------------------------------
# zinit
# ------------------------------------------------------------------------------


if [[ -f "${ZINIT[BIN_DIR]}/zinit.zsh" ]]; then

    source "${ZINIT[BIN_DIR]}/zinit.zsh"

fi
