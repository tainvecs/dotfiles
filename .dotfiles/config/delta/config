[include]
    path         = ./themes.gitconfig

[delta]
    features     = woolly-mammoth
    side-by-side = false
    line-numbers = true
    hyperlinks   = true

[pager]
    blame        = delta
    diff         = delta
    grep         = delta
    log          = delta
    reflog       = delta
    show         = delta
    stash        = delta
    whatchanged  = delta

[interactive]
    diffFilter   = delta --color-only --features=interactive