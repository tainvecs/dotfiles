# ------------------------------------------------------------------------------
#
# Return Code
#
#
# Version: 0.0.3
# Last Modified: 2025-06-21
#
# ------------------------------------------------------------------------------


# Success codes
readonly RC_SUCCESS=0

# General error codes (1-9)
readonly RC_ERROR=1                   # General error
readonly RC_INVALID_USAGE=2           # Misuse of shell builtins (bash convention)
readonly RC_INVALID_ARGS=3            # Invalid arguments
readonly RC_PERMISSION_DENIED=4       # Permission denied
readonly RC_NOT_FOUND=5               # File/command not found
readonly RC_TIMEOUT=6                 # Operation timed out
readonly RC_INTERRUPTED=7             # Operation interrupted
readonly RC_NETWORK_ERROR=8           # Network related error
readonly RC_IO_ERROR=9                # Input/output error

# Configuration and dependency errors (10-19)
readonly RC_CONFIG_ERROR=10           # Configuration error
readonly RC_DEPENDENCY_MISSING=11     # Missing dependency
readonly RC_VERSION_MISMATCH=12       # Version incompatibility
readonly RC_UNSUPPORTED=13            # Unsupported operation/platform
readonly RC_ALREADY_EXISTS=14         # Resource already exists
readonly RC_LOCK_ERROR=15             # Lock file error

# Data and validation errors (20-29)
readonly RC_INVALID_DATA=20           # Invalid data format
readonly RC_VALIDATION_FAILED=21      # Data validation failed
readonly RC_PARSE_ERROR=22            # Parsing error
readonly RC_CHECKSUM_MISMATCH=23      # Checksum verification failed
readonly RC_CORRUPT_DATA=24           # Data corruption detected

# Resource errors (30-39)
readonly RC_OUT_OF_MEMORY=30          # Out of memory
readonly RC_DISK_FULL=31              # Disk full
readonly RC_QUOTA_EXCEEDED=32         # Quota exceeded
readonly RC_RESOURCE_BUSY=33          # Resource busy/locked

# User interaction codes (40-49)
readonly RC_USER_CANCELLED=40         # User cancelled operation
readonly RC_USER_INPUT_REQUIRED=41    # User input required
readonly RC_CONFIRMATION_REQUIRED=42  # User confirmation required

# System codes (50-59)
readonly RC_SYSTEM_ERROR=50           # System error
readonly RC_SERVICE_UNAVAILABLE=51    # Service unavailable
readonly RC_MAINTENANCE_MODE=52       # In maintenance mode

# Application specific codes (60-99)
readonly RC_SKIPPED=77

# Reserved ranges
# 100-199: Custom project codes
# 200-255: Avoid (some shells use these)
